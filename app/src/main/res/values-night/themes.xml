<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#121212</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="numberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#fedccc</item>
        <item name="android:textSize">52sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="actionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#fedccc</item>
        <item name="android:textSize">52sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="backgroundTint">#5c3e31</item>
        <item name="android:clickable">true</item>
    </style>

</resources>